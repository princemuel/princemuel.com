{
  "search.exclude": {
    "**/.node_modules": true,
    "**/pnpm.*": true
  },
  "typescript.tsdk": "node_modules/typescript/lib",
  "typescript.enablePromptUseWorkspaceTsdk": true,
  "dotenv.enableAutocloaking": false,
  "editor.bracketPairColorization.independentColorPoolPerBracketType": true,
  "editor.wordWrap": "bounded",
  "editor.wordWrapColumn": 96,
  "editor.inlineSuggest.enabled": true,
  "editor.fontFamily": "'Cascadia Code', 'CaskaydiaMono Nerd Font','JetBrainsMono Nerd Font', 'Droid Sans Mono', 'monospace', monospace",
  "editor.defaultFormatter": "esbenp.prettier-vscode",
  "editor.codeActionsOnSave": {
    // "source.fixAll": "explicit",
    "source.organizeImports": "explicit",
    "source.addMissingImports": "explicit",
    "source.fixAll.oxc": "explicit",
    "source.fixAll.markdownlint": "explicit",
    "source.fixAll.rust-analyzer": "explicit"
  },
  "files.associations": {
    "*.css": "tailwindcss"
  },
  "editor.quickSuggestions": {
    "strings": "on"
  },
  "emmet.preferences": {
    "output.selfClosingStyle": "xhtml"
  },
  // "emmet.includeLanguages": {
  //   "typescriptreact": "html"
  // },
  "oxc.enable": true,
  "eslint.enable": true,
  "eslint.useFlatConfig": true,
  "eslint.validate": ["astro", "javascript", "markdown", "typescript", "typescriptreact"],
  "json.validate.enable": true,

  "mdx.server.enable": true,
  "mdx.validate.validateDuplicateLinkDefinitions": "warning",
  "mdx.validate.validateFileLinks": "warning",
  "mdx.validate.validateFragmentLinks": "warning",
  "mdx.validate.validateMarkdownFileLinkFragments": "warning",
  "mdx.validate.validateReferences": "warning",
  "mdx.validate.validateUnusedLinkDefinitions": "warning",

  "astro.content-intellisense": true,
  "npm-intellisense.packageSubfoldersIntellisense": true,
  "prettier.documentSelectors": ["**/*.astro"],
  "auto-close-tag.activationOnLanguage": ["*"],
  "[astro]": {
    "editor.defaultFormatter": "esbenp.prettier-vscode"
  },

  "evenBetterToml.formatter.alignComments": true,
  "evenBetterToml.formatter.alignEntries": true,
  "evenBetterToml.formatter.arrayAutoCollapse": true,
  "evenBetterToml.formatter.arrayAutoExpand": true,
  "evenBetterToml.formatter.arrayTrailingComma": true,
  "evenBetterToml.formatter.columnWidth": 96,
  "evenBetterToml.formatter.reorderArrays": true,
  "evenBetterToml.formatter.reorderKeys": true,
  "evenBetterToml.formatter.trailingNewline": true,

  "tailwindCSS.emmetCompletions": true,
  "tailwindCSS.classAttributes": ["class", "class:list", "tw"],
  "tailwindCSS.experimental.configFile": "app/global.css",
  "tailwindCSS.includeLanguages": {
    "xslt": "html"
  },
  "tailwindCSS.experimental.classRegex": [
    ["([\"'`][^\"'`]*.*?[\"'`])", "[\"'`]([^\"'`]*).*?[\"'`]"]
  ],
  "workbench.tree.indent": 12,

  // Rust Analyzer settings
  "rust-analyzer.cargo.features": "all",
  "rust-analyzer.check.command": "clippy",
  "rust-analyzer.checkOnSave": true,
  // Auto import and organize imports
  "rust-analyzer.completion.autoimport.enable": true,
  "rust-analyzer.imports.group.enable": true,
  "rust-analyzer.imports.granularity.enforce": true,
  "rust-analyzer.imports.granularity.group": "module",
  "rust-analyzer.imports.prefix": "crate",
  "rust-analyzer.imports.merge.glob": true,
  "rust-analyzer.imports.prefixExternPrelude": true,
  "rust-analyzer.imports.preferNoStd": true,
  "rust-analyzer.imports.preferPrelude": true,
  // Inlay Hints
  "rust-analyzer.inlayHints.typeHints.enable": false,
  "rust-analyzer.inlayHints.chainingHints.enable": false,
  // Formatting with rustfmt
  "editor.formatOnSave": true,
  "files.autoSave": "off",
  "[rust]": {
    "editor.defaultFormatter": "rust-lang.rust-analyzer",
    "editor.formatOnSave": true
  },
  "rust-analyzer.testExplorer": true,
  "rust-analyzer.assist.emitMustUse": true,
  "rust-analyzer.semanticHighlighting.punctuation.enable": true,
  "material-icon-theme.folders.associations": {
    "journal": "drafts",
    "crates": "packages"
  }
}
