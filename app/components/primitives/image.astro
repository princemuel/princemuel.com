---
import { Image as AstroImage } from "astro:assets";

import type { ComponentProps } from "astro/types";

type Props = Prettify<
  ComponentProps<typeof AstroImage> & { src: ImageMetadata | string }
>;

const { src, alt } = Astro.props;
---

{
  typeof src === "string" ? (
    <img src={src} alt={alt} />
  ) : (
    <AstroImage src={src} alt={alt} class="" />
  )
}
