---
import { SITE_STATUS } from "astro:env/server";
---

<Fragment>
  {
    SITE_STATUS === "live" ? (
      <slot name="site-status-live" />
    ) : (
      <slot name="site-status-down" />
    )
  }
</Fragment>

<style is:global>
  .expressive-code + .expressive-code {
    @apply mt-12;
  }
</style>
