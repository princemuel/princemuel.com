const formatter = createDateFormatter({
  weekday: "short",
  year: "numeric",
  month: "short",
  day: "2-digit",
});

const buildDate = new Date(__BUILD_DATE__);

const date = new Date();
---

<footer {...attrs} class:list={[className]}>
  <Wrapper>
    <div class="">
      <div class="flex">
        {
          socials.map((link) => (
            <Link
              href={link.data.href}
              class:list={["flex items-center text-2xl text-slate-800 transition"]}
            >
              <Icon name={link.data.icon} />
              <span class="sr-only">{link.data.text}</span>
            </Link>
          ))
        }
      </div>

      <Copyright server:defer datetime={date.toISOString()}>
        <Copyright slot="fallback" datetime={date.toISOString()} />
      </Copyright>

      <span class="font-bold">Prince Muel.</span>
      <span>All Rights Reserved</span>
    </div>
  </Wrapper>

  <Wrapper class="flex items-center justify-center py-1">
    <p
      class="flex flex-wrap items-center justify-center gap-1 text-xs text-slate-800"
    >
      <span>Built with</span>
      <Icon name="astro-icon" />
      <Link href="https://docs.astro.build/en/concepts/why-astro/">
        {Astro.generator}
      </Link>
      <span>on</span>
      <Time datetime={buildDate.toISOString()}>
        {formatter.format(buildDate.toISOString())}
      </Time>
    </p>
  </Wrapper>
</footer>
