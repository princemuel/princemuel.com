---
import Slot from "@/components/primitives/slot.astro";

import { linked } from "@/assets";

import type { HTMLAttributes } from "astro/types";

type Props = HTMLAttributes<"article">;

const { class: className, ...attrs } = Astro.props;
---

<Slot
  as="article"
  id="article"
  aria-labelledby="headline"
  class:list={[
    "prose xl:prose-lg 3xl:prose-2xl dark:prose-invert",
    "prose-headings:font-accent",
    "prose-a:visited:text-2xl",
    "**:[.expressive-code_+_.expressive-code]:mt-12",
  ]}
  {...attrs}
>
  <slot />
</Slot>

<style define:vars={{ linked: `url(${linked.src})` }}>
  .text-span {
    background: linear-gradient(135deg, #4235d0 38%, #f969cd 100%);
    -webkit-background-clip: text;
    -webkit-text-fill-color: rgba(0, 0, 0, 0);
  }
</style>
