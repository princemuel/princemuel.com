---
import type { HTMLAttributes } from "astro/types";

type Props = HTMLAttributes<"article">;

const attrs = Astro.props;
---

<article
  id="article"
  aria-labelledby="headline"
  class:list={[
    "prose prose-neutral 3xl:prose-lg dark:prose-invert",
    "**:[.expressive-code_+_.expressive-code]:mt-12",
  ]}
  {...attrs}
>
  <slot />
</article>
