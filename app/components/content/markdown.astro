---
import { linked } from "@/assets";

import type { HTMLAttributes } from "astro/types";

type Props = HTMLAttributes<"article">;

const { class: className, ...attrs } = Astro.props;
---

<article id="article" class="prose xl:prose-lg dark:prose-invert" {...attrs}>
  <slot />
</article>

<style define:vars={{ linked: `url(${linked.src})` }}></style>
