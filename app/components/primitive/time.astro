---
import { dfmt } from "@/helpers/date-format";

import type { HTMLAttributes } from "astro/types";

type Props = HTMLAttributes<"time">;

const { datetime, ...attrs } = Astro.props;

const date = datetime || new Date().toISOString();
---

<time datetime={dfmt.toISOString(date)} {...attrs}>
  <slot>{dfmt.format(date)}</slot>
</time>
