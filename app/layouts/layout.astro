---
import Markdown from "@/components/content/markdown.astro";
import Wrapper from "@/components/layout/wrapper.astro";
import Root from "@/layouts/root.astro";

import type { MarkdownLayoutProps } from "astro";

type Props = MarkdownLayoutProps<{ title: string; description: string }>;

const { frontmatter } = Astro.props;

const { title, description } = frontmatter;

const meta = {
  title: [title, true],
  description: description,
} satisfies Meta;
---

<Root meta={meta}>
  <slot slot="meta" />
  <Wrapper>
    <div class="flex flex-col gap-4">
      <h1 id="headline" class="text-3xl font-extrabold text-slate-800 lg:text-5xl">
        {title}
      </h1>
      <Markdown>
        <slot />
      </Markdown>
    </div>
  </Wrapper>
</Root>
