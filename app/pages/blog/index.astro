---
import Markdown from "@/components/content/markdown.astro";
import Wrapper from "@/components/layout/wrapper.astro";
import Link from "@/components/primitives/link.astro";
import Root from "@/layouts/root.astro";

import { Content } from "@/content/pages/blog.md";

import { getCollection } from "astro:content";

const collection = await getCollection(
  "posts",
  ({ data }) => !(import.meta.env.PROD && data.draft),
);

const entries = collection.sort((a, b) => {
  return Number(b.data.publishedAt) - Number(a.data.publishedAt);
});

const meta = {
  title: ["Blog"],
  description:
    "A space where I talk about web development and other programming related (or not) things",
} satisfies Meta;
---

<Root meta={meta}>
  <Wrapper>
    <div class="flex flex-col gap-4">
      <h1 id="headline" class="text-3xl font-extrabold text-slate-800 lg:text-5xl">
        Blog
      </h1>
      <Markdown>
        <Content />
      </Markdown>

      <section class="mt-8 flex flex-col gap-8">
        {
          entries.map(({ id, data }) => (
            <article class="flex flex-col gap-1">
              <h3>
                <Link
                  href={`/blog/${id}`}
                  class="hocus:underline text-lg font-bold text-slate-800"
                >
                  {data.title}
                </Link>
              </h3>
              <p class="text-base text-slate-600">{data.summary}</p>
              <Link
                href={`/blog/${id}`}
                class="hocus:text-slate-700 hocus:underline mt-2 flex text-sm text-slate-500"
              >
                Read this article &RightArrow;
              </Link>
            </article>
          ))
        }
      </section>
    </div>
  </Wrapper>
</Root>
