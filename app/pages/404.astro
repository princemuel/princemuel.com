---
import Markdown from "@/components/content/markdown.astro";
import Wrapper from "@/components/layout/wrapper.astro";
import Root from "@/layouts/root.astro";

import { Content } from "@/content/pages/404.md";

const meta = {
  title: ["404: Not found", true],
  description: "Accesibility Statement for Prince Muel's site",
  robots: { noindex: true, nofollow: true, nosnippet: true },
} satisfies Meta;
---

<Root meta={meta}>
  <Wrapper>
    <div class="flex flex-col gap-4">
      <h1 id="headline" class="text-3xl font-extrabold text-slate-800 lg:text-5xl">
        404: Not found
      </h1>
      <Markdown>
        <Content />
      </Markdown>
    </div>
  </Wrapper>
</Root>
