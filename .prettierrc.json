{
  "printWidth": 84,
  "semi": true,
  "singleQuote": false,
  "tabWidth": 2,
  "trailingComma": "all",
  "useTabs": false,

  "tailwindFunctions": ["tw", "cn", "tv"],
  "tailwindAttributes": ["tw"],
  "experimentalTernaries": false,
  "plugins": [
    "prettier-plugin-prisma",
    "prettier-plugin-astro",
    "prettier-plugin-tailwindcss"
  ],
  "overrides": [
    {
      "files": [".*", "*.json", "*.md", "*.mdx", "*.toml", "*.yml"],
      "options": {
        "useTabs": false
      }
    },
    {
      "files": "*.astro",
      "options": {
        "parser": "astro",
        "astroAllowShorthand": false,
        "astroSkipFrontmatter": false
      }
    }
  ]
}
